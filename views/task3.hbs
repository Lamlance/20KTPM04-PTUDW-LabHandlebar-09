<!--contain-->
<div class="container">
  <div class="row">
    <div class="col-md-2">
      <ul class="list-group" id="categories">
        <li class="list-group-item"><a href="/task3?categoryFilter=1">Samsung</a></li>
        <li class="list-group-item"><a href="/task3?categoryFilter=2">Sony</a></li>
        <li class="list-group-item"><a href="/task3?categoryFilter=3">Panasonic</a></li>
      </ul>
    </div>

    <div class="col-md-10">
      <div id="products" class="row list-group">

        {{#each products}}
        <div class="item col-xs-4 col-lg-4" id={{title}}>
          <div class="thumbnail">
            <img class="group list-group-image" src={{imagePath}} alt="">
            <div class="caption">
              <h4 class="group inner list-group-item-heading">{{title}}</h4>
              <p class="group inner list-group-item-text">{{description}}</p>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <p class="lead">{{price}} VNƒê</p>
                </div>
                <div class="col-xs-12 col-md-6">
                  <a class="btn btn-success" href="#">Add to cart</a>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>
<!--/contain-->
